{{#*inline "selectPartial"}}
<option value="{{@key}}" {{#if this}}selected{{/if}}>{{@key}}</option>
{{/inline}}

<form class="flexcol">
    <div class="category">
        <div class="form-group">
            <label for="dawn-dusk-enabled">{{localize "DBTIME.Settings.DawnDuskEnabled"}}:</label>
            <input type="checkbox" name="dawn-dusk-enabled" value="true" {{checked dawn-dusk-enabled}} />
        </div>
        <div class="form-group">
            <label for="day-darkness-level">{{localize "DBTIME.Settings.DaytimeDarknessLevel.label"}}:</label>
            <range-picker min="0" max="1" name="day-darkness-level" step="0.05"
                value={{day-darkness-level}}></range-picker>
        </div>
        <div class="form-group">
            <label for="night-darkness-level">{{localize "DBTIME.Settings.NighttimeDarknessLevel.label"}}:</label>
            <range-picker min="0" max="1" name="night-darkness-level" step="0.05"
                value={{night-darkness-level}}></range-picker>
        </div>
        <div class="form-group">
            <label>{{localize "DBTIME.Settings.DawnStartTime.label"}}:</label>
            <div class="form-fields">
                <select name="dawn-start">
                    {{#each dawn-start-options}}
                    {{> selectPartial}}
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "DBTIME.Settings.SunsetStartTime.label"}}:</label>
            <div class="form-fields">
                <select name="sunset-start">
                    {{#each sunset-start-options}}
                    {{> selectPartial}}
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <footer class="sheet-footer flexrow">
        <button type="submit" name="submit">
            <i class="fa fa-check"></i> OK
        </button>
    </footer>
</form>